<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#4A90E2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#87CEEB;stop-opacity:1" />
    </linearGradient>
    <pattern id="panel-pattern" width="100" height="100" patternUnits="userSpaceOnUse">
      <rect width="90" height="90" x="5" y="5" fill="#2C3E50" rx="2" />
      <rect width="80" height="80" x="10" y="10" fill="#34495E" rx="2" />
    </pattern>
  </defs>
  
  <!-- Sky Background -->
  <rect width="800" height="600" fill="url(#sky)" />
  
  <!-- House -->
  <path d="M200 300 L400 150 L600 300 L600 500 L200 500 Z" fill="#ECF0F1" />
  
  <!-- Roof with Solar Panels -->
  <g transform="translate(200,150)">
    <rect width="400" height="200" fill="url(#panel-pattern)" />
    
    <!-- Solar Panel Reflections -->
    <g opacity="0.2">
      <circle cx="50" cy="50" r="20" fill="white" />
      <circle cx="150" cy="100" r="15" fill="white" />
      <circle cx="250" cy="50" r="25" fill="white" />
      <circle cx="350" cy="150" r="20" fill="white" />
    </g>
  </g>
  
  <!-- Sun -->
  <circle cx="700" cy="100" r="60" fill="#F1C40F" />
  <g opacity="0.3">
    <circle cx="700" cy="100" r="70" fill="none" stroke="#F1C40F" stroke-width="2" />
    <circle cx="700" cy="100" r="80" fill="none" stroke="#F1C40F" stroke-width="2" />
  </g>
</svg>